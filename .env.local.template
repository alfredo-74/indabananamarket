# OrderFlowAI - Local Environment Configuration
# Copy this to .env.local and fill in your values

# Database Connection (get from Replit Secrets)
DATABASE_URL="postgresql://..."

# Safety Authentication Key (keep this secret!)
# Generate with: openssl rand -hex 32
SAFETY_AUTH_KEY="your-64-character-safety-auth-key-here"

# SAFETY MODE: Controls authentication requirement for safety endpoints
# - "strict" (default): Requires x-safety-auth-key header on ALL requests
# - "local-only": Bypasses auth for localhost (127.0.0.1) only - FOR LOCAL DEV ONLY!
# WARNING: local-only mode is less secure - only use on your local machine
SAFETY_AUTH_MODE="strict"

# IBKR Credentials
IBKR_USERNAME="your-ibkr-username"
IBKR_PASSWORD="your-ibkr-password"

# Session Secret (generate a random string)
SESSION_SECRET="change-this-to-a-random-string"

# Node Environment
NODE_ENV=development

# Optional: Override port (default 5000)
# PORT=5000
